<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActorName" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="maxLines">2</item>
    </style>

    <style name="ActionStar">
        <item name="android:layout_width">@dimen/star_width</item>
        <item name="android:layout_height">@dimen/star_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="contentDescription">@string/default_logo_desc</item>
    </style>

    <style name="DisableStar" parent="ActionStar">
        <item name="tint">@color/colorDisableStar</item>
    </style>

    <style name="ActionMiniStar" parent="ActionStar">
        <item name="android:layout_width">@dimen/star_mini_w</item>
        <item name="android:layout_height">@dimen/star_mini_h</item>
    </style>

    <style name="DisableMiniStar" parent="ActionMiniStar">
        <item name="tint">@color/colorDisableStar</item>
    </style>

</resources>